<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpiniActivity"
    android:background="@color/colororen"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colormerah"
            android:orientation="vertical">
            <Button
                android:id="@+id/back2"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="Back"
                android:background="@color/colorkuning"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opini Kelompok"
                    android:gravity="center"
                    android:textSize="43sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:background="#ffff"
            android:layout_marginTop="20dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TableRow
                        android:padding="5dp">
                        <ImageView
                            android:src="@drawable/foto_logo"
                            android:layout_weight="2"/>
                        <TextView
                            android:text="Pertama adalah museum menjadi pusat edukasi, pendidikan untuk masyarakat"
                            android:layout_weight="6"
                            android:textColor="@color/colorbiru"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Like"
                            android:background="@color/colormerah"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Comment"
                            android:background="@color/colorkuning"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Share"
                            android:background="@color/colorbiru"/>
                    </LinearLayout>
                    <TableRow
                        android:padding="5dp">
                        <ImageView
                            android:src="@drawable/uhuy"
                            android:layout_weight="2"/>
                        <TextView
                            android:text="Memberikan Informasi sejarah mengenai sejarah perjuangan membuat rokok"
                            android:layout_weight="6"
                            android:textColor="@color/colorbiru"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Like"
                            android:background="@color/colormerah"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Comment"
                            android:background="@color/colorkuning"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Share"
                            android:background="@color/colorbiru"/>
                    </LinearLayout>
                    <TableRow
                        android:padding="5dp">
                        <ImageView
                            android:src="@drawable/dms2"
                            android:layout_weight="2"/>
                        <TextView
                            android:text="museum menjadi tempat interaksi dan berdialog. Tempat share mengenai hal hal"
                            android:layout_weight="6"
                            android:textColor="@color/colorbiru"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Like"
                            android:background="@color/colormerah"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Comment"
                            android:background="@color/colorkuning"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Share"
                            android:background="@color/colorbiru"/>
                    </LinearLayout>
                    <TableRow
                        android:padding="5dp">
                        <ImageView
                            android:src="@drawable/dms2"
                            android:layout_weight="2"/>
                        <TextView
                            android:text="Dari kunjungan ke museum ini saya melihat mimpi seorang awam dalam sebuah rokok"
                            android:layout_weight="6"
                            android:textColor="@color/colorbiru"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Like"
                            android:background="@color/colormerah"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Comment"
                            android:background="@color/colorkuning"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Share"
                            android:background="@color/colorbiru"/>
                    </LinearLayout>
                    <TableRow
                        android:padding="5dp">
                        <ImageView
                            android:src="@drawable/dms2"
                            android:layout_weight="2"/>
                        <TextView
                            android:text="museum menjadi tempat interaksi dan berdialog. Tempat share mengenai hal hal"
                            android:layout_weight="6"
                            android:textColor="@color/colorbiru"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Like"
                            android:background="@color/colormerah"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Comment"
                            android:background="@color/colorkuning"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="2"
                            android:text="Share"
                            android:background="@color/colorbiru"/>
                    </LinearLayout>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>